{
	"structs":
	{
		"attribute": {
			"fields":
			{
				"base": { "type": "uint", "default": 10 },
				"mod": { "type": "+int", "computed": "floor({parent.base}/2)-5" },
				"temp": { "type": "+int", "default": 0 },
				"total": { "type": "+int", "computed": "{parent.mod}+{parent.temp}" }
			}
		},
		"skill": {
			"fields":
			{
				"name": { "type": "string", "default": "" },
				"ranks": { "type": "uint", "default": 0 },
				"mod": { "type": "+int", "default": 0 },
				"total": { "type": "+int", "computed": "{parent.ranks}+{parent.mod}" }
			}
		}
	},

	"fields":
	{
		"name": { "type": "string", "default": "" },
		"class": { "type": "string", "default": "" },

		"str": { "type": "attribute", "value": "{.total}" },
		"dex": { "type": "attribute", "value": "{.total}" },
		"con": { "type": "attribute", "value": "{.total}" },
		"int": { "type": "attribute", "value": "{.total}" },
		"wis": { "type": "attribute", "value": "{.total}" },
		"cha": { "type": "attribute", "value": "{.total}" },

		"skills": { "type": "skill", "list": true }
	}
}